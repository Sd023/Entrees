<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Entreés" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="bottomNavigationStyle">@style/MyBottomNavigationView</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Theme.Entreés" parent="Base.Theme.Entreés" />

    <style name="MyBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@drawable/gradient_bottom</item>
        <item name="android:elevation">8dp</item>
        <item name="itemTextColor">@color/bottom_items_color</item>
        <item name="itemIconTint">@color/bottom_items_color</item>
        <item name="itemActiveIndicatorStyle">@color/red</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <!-- Your custom attributes here -->
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/bg_color</item>
        <item name="fontFamily">@font/righteous_font</item>
        <!-- Add any other custom attributes you want to override -->
    </style>


</resources>